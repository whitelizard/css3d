{
  "extends": "eslint-config-synacor",

  "rules": {
    "no-restricted-syntax": [0],
    "no-mixed-operators": [0],
    "no-underscore-dangle": [0],
    "arrow-parens": [2, "as-needed"],
    "indent": ["error", 2],
    "comma-dangle": [0],
    "brace-style": ["error", "1tbs"],
    "react/jsx-indent-props": [0]
  },

  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
}
